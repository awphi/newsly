html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title Newsly - #{title}
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
        script(src="https://kit.fontawesome.com/5a4260836f.js", crossorigin="anonymous")
        block head
    body.d-flex.flex-column
        nav.navbar.navbar-expand-lg.navbar-light.bg-head.sticky-top
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarToggler' aria-controls='navbarToggler' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            a.navbar-brand(href='/') Newsly
            #navbarToggler.collapse.navbar-collapse
                ul.navbar-nav.mr-auto.mt-2.mt-lg-0
                    li.nav-item
                        a.nav-link(href='/submit') Submit
                    li.nav-item
                        a.nav-link(href='/contact') Contact
                form.form-inline.my-2.my-lg-0(style='align-items: initial;')
                    input.form-control.search(type='search' placeholder='Search Articles' aria-label='Search')
                    button.btn.btn-secondary.search-btn.my-2.my-sm-0(type='submit') 
                        i.fas.fa-search
        .container-fluid#container
            block content

    
        block templates

        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4", crossorigin="anonymous")
        script(src='/js/jquery-3.4.1.min.js')
        script(src='/js/bootstrap.min.js')
        block scripts
