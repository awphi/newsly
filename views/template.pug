html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title Newsly - #{title}
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
        block head
    body.d-flex.flex-column
        nav.navbar.navbar-expand-lg.navbar-light.bg-head.sticky-top
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarToggler' aria-controls='navbarToggler' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            a.navbar-brand(href='/') Newsly
            #navbarToggler.collapse.navbar-collapse
                ul.navbar-nav.mr-auto.mt-2.mt-lg-0
                    li.nav-item
                        a.nav-link(href='/submit') Submit Article
                form.form-inline.my-2.my-lg-0
                    input.form-control.mr-sm-2(type='search' placeholder='Search Articles' aria-label='Search')
                    button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
        .container-fluid#container
            .row
                .col-md-3
                .col-md-6.p-3#stories
                    block content
                .col-md-3

    
        script(src='/js/jquery-3.4.1.min.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/popper-2.0.6-core.min.js')
        block scripts
